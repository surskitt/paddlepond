---
apiVersion: v1
kind: Secret
metadata:
  name: pyload-secrets
  namespace: media
type: Opaque
stringData:
  values.yml: |
    ingress:
      hosts:
        - host: {{ pass_pyload_host }}
          paths:
            - path: /
              pathPrefix: Prefix
      annotations:
        external-dns.alpha.kubernetes.io/target: {{ pass_cname_host }}
      tls:
        - hosts:
            - {{ pass_pyload_host }}
          secretName: pyload-tls

  GOTIFY_TOKEN: {{ pass_pyload_gotify_token }}
