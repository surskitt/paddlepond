---
apiVersion: v1
kind: Secret
metadata:
  name: bazarr-secrets
  namespace: media
type: Opaque
stringData:
  values.yml: |
    ingress:
      hosts:
        - host: ${BAZARR_HOST}
          paths:
            - path: /
              pathPrefix: Prefix
      annotations:
        external-dns.alpha.kubernetes.io/target: ${CNAME_HOST}
      tls:
        - hosts:
            - ${BAZARR_HOST}
          secretName: bazarr-tls
