---
apiVersion: v1
kind: Secret
metadata:
  name: calibre-web-secrets
  namespace: media
type: Opaque
stringData:
  values.yml: |
    ingress:
      hosts:
        - host: {{ pass_calibre_web_host }}
          paths:
            - path: /
              pathPrefix: Prefix
      annotations:
        external-dns.alpha.kubernetes.io/target: {{ pass_cname_host }}
      tls:
        - hosts:
            - {{ pass_calibre_web_host }}
          secretName: calibre-web-tls
