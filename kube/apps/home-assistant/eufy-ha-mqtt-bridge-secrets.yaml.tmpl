---
apiVersion: v1
kind: Secret
metadata:
  name: eufy-ha-mqtt-bridge-config
  namespace: home-assistant
type: Opaque
stringData:
  config.yml: |
    eufy:
      username: "${EUFY_SECURITY_MQTT_USERNAME}"
      password: "${EUFY_SECURITY_MQTT_PASSWORD}"
    mqtt:
      url: mqtt://mosquitto.home-assistant.svc.cluster.local:1883
      username: ""
      password: ""
