---
apiVersion: v1
kind: Secret
metadata:
  name: hass-values
  namespace: home-assistant
type: Opaque
stringData:
  values: |
    ingress:
      hosts:
        - host: ${HASS_HOST}
          paths:
            - path: /
              pathType: Prefix
      # annotations:
      #   external-dns.alpha.kubernetes.io/target: ${CNAME_HOST}
      tls:
        - hosts:
            - ${HASS_HOST}
          secretName: hass-tls
