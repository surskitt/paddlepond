---
apiVersion: v1
kind: Secret
metadata:
  name: syncthing-secrets
  namespace: syncthing
type: Opaque
stringData:
  values: |
    ingress:
      main:
        hosts:
          - host: {{ pass_syncthing_host }}
            paths:
              - path: /
                pathType: Prefix
        annotations:
          external-dns.alpha.kubernetes.io/target: {{ pass_cname_host }}
        tls:
          - hosts:
              - {{ pass_syncthing_host }}
            secretName: syncthing-tls
