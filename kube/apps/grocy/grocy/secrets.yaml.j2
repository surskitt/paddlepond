---
apiVersion: v1
kind: Secret
metadata:
  name: grocy-secrets
  namespace: grocy
type: Opaque
stringData:
  values.yml: |
    ingress:
      main:
        hosts:
          - host: {{ pass_grocy_host }}
            paths:
              - path: /
                pathPrefix: Prefix
        annotations:
          external-dns.alpha.kubernetes.io/target: {{ pass_cname_host }}
        tls:
          - hosts:
              - {{ pass_grocy_host }}
            secretName: grocy-tls
