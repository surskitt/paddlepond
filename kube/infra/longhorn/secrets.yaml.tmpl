---
apiVersion: v1
kind: Secret
metadata:
  name: longhorn-secrets
  namespace: longhorn
type: Opaque
stringData:
  values.yml: |
    ingress:
      enabled: true
      host: ${LONGHORN_HOST}
      annotations:
        external-dns.alpha.kubernetes.io/target: ${CNAME_HOST}
      tls: true
  AWS_ACCESS_KEY_ID: ${LONGHORN_AWS_ACCESS_KEY_ID}
  AWS_SECRET_ACCESS_KEY: ${LONGHORN_AWS_SECRET_ACCESS_KEY}
  AWS_ENDPOINTS: http://192.168.2.8:9000
